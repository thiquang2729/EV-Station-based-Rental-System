generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode = "prisma"
}

model Station {
  id        String   @id @default(cuid()) // Fallback về cuid nếu code không tạo ID
  name      String
  address   String
  lat       Float
  lng       Float
  vehicles  Vehicle[]
  bookings  Booking[]
}

model Vehicle {
  id            String   @id @default(cuid())
  name          String   @default("Unknown")
  stationId     String
  station       Station  @relation(fields: [stationId], references: [id])
  type          String
  plate         String   @unique
  batteryLevel  Int
  healthStatus  String   @default("OK")
  pricePerDay   Int
  isAvailable   Boolean  @default(true)
  imageUrl      String?
  description   String?
  bookings      Booking[]
  incidents     Incident[]

  @@index([stationId])
}

model Booking {
  id        String   @id @default(cuid())
  userId    String

  stationId String
  station   Station @relation(fields: [stationId], references: [id])

  vehicleId String
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  startTime     DateTime
  endTime       DateTime?
  status        String   @default("PENDING")
  priceEstimate Int?
  priceFinal    Int?
  paymentId     String?
  confirmedAt   DateTime?
  createdAt     DateTime @default(now())

  handovers     Handover[]

  @@index([stationId])
  @@index([vehicleId])
}



model Handover {
  id        String   @id @default(cuid())
  bookingId String
  booking   Booking  @relation(fields: [bookingId], references: [id])
  staffId   String
  type      String   // PICKUP|RETURN
  checklist Json
  photos    Json
  odo       Int
  notes     String?
  createdAt DateTime @default(now())

  @@index([bookingId])
}

model Incident {
  id          String   @id @default(cuid())
  vehicleId   String
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id])
  stationId   String
  reporterId  String
  severity    String
  status      String   @default("OPEN")
  desc        String
  photos      Json
  createdAt   DateTime @default(now())

  @@index([vehicleId])
}
